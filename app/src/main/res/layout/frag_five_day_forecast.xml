<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="com.example.test.weatherapp.ui.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/five_day_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space style="@style/FiveDayForecastSpacer" />

        <TextView  style="@style/FiveDayForecastItem"/>

        <Space style="@style/FiveDayForecastSpacer" />

        <TextView  style="@style/FiveDayForecastItem"/>

        <Space style="@style/FiveDayForecastSpacer" />

        <TextView  style="@style/FiveDayForecastItem"/>

        <Space style="@style/FiveDayForecastSpacer" />

        <TextView  style="@style/FiveDayForecastItem"/>

        <Space style="@style/FiveDayForecastSpacer" />

        <TextView  style="@style/FiveDayForecastItem"/>

        <Space style="@style/FiveDayForecastSpacer" />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_above="@id/submit"
        android:id="@+id/input_layout_zipcode"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_height="wrap_content">

        <EditText
            android:maxLength="5"
            android:inputType="number"
            android:id="@+id/zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Zipcode" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submit"
        android:layout_centerHorizontal="true"
        android:text="@string/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>